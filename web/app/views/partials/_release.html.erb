<article class="release">
   <div class="release__top-header">
      <h2 class="release__catalog-number"><%= release.get_string("release-catalog-number") %></h2>
   </div>
   <section class="release__content">
      <div class="release__header">
         <div>
            <span class="release__publish-date"><%= release.get_string("release-publish-date") %></span>
            <span class="release__detail"><%= release.get_string("release-detail") %></span>
         </div>
         <div>
            <address class="release__artist"><%= release.get_string("release-artist-name") %></address>
            <h1 class="release__title"><%= release[:name] %></h1>
         </div>
      </div>
      <div class="release__tracklist">
         <div class="release__tracklist-inner">
            <%= render partial: "partials/tracklist", locals: { tracklist: release.get_repeater("release-track-list") } %>
         </div>
      </div>
      <a class="release__link"href=<%= release.get_string("release-url")%>>BUY</a>
   </section>
</article>
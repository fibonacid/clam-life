<%= render partial: "partials/meta" %>

<div class="homepage__wrapper">
   <%= render "partials/header" %>

   <ul class="releases__list">
      <% @releases.each do |release| %>
         <li class="releases__item">
            <%= render partial: "partials/release", locals: { release: release } %>
         </li>
      <% end %>

      <% required_fillers = @releases.length % 3 %>
      <% for i in 0..required_fillers %>
         <li class="releases__item--ghost"></li>
      <% end %>
   </ul>
</div>
